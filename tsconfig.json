{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": false,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "package",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "ignoreDeprecations": "5.0",
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    
    // "types": ["jest"],
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    "declaration": true
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "packages/**/*.test.tsx",
    "packages/**/*stories.tsx"
  ]
}